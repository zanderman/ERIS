<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eris.fragments.IncidentInfoFragment"
    android:weightSum="1">


    <FrameLayout
        android:id="@+id/incident_info_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"></FrameLayout>

    <FrameLayout
        android:id="@+id/incident_map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"></FrameLayout>

</LinearLayout>
