        <!--android:layout_height="120dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="@drawable/circle"-->
        <!--android:id="@+id/mapView" />-->

</RelativeLayout>